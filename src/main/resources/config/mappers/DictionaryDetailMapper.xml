<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- user_info表 -->
<mapper namespace="com.equestrianism.api.dao.DictionaryDetailMapper">

    <!--返回Map-->
    <resultMap id="BaseResultMap" type="com.equestrianism.api.model.po.DictionaryDetailEntity">
        <id column="dictionary_detail_id" property="dictionaryDetailId" jdbcType="INTEGER"/>
        <result column="item_code" property="itemCode" jdbcType="VARCHAR"/>
        <result column="item_value" property="itemValue" jdbcType="VARCHAR"/>
        <result column="dictionary_id" property="dictionaryId" jdbcType="INTEGER"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
        <result column="delete_flag" property="deleteFlag" jdbcType="INTEGER"/>
        <result column="data_version" property="dataVersion" jdbcType="INTEGER"/>
        <result column="create_date" property="createDate" jdbcType="TIMESTAMP"/>
        <result column="update_date" property="updateDate" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--基本的sql查询字段 公共引用...-->
    <sql id="Base_Column_List">
        dictionary_detail_id, item_code, item_value, dictionary_id, status, delete_flag, data_version,
        create_date, update_date
    </sql>


    <insert id="insert" parameterType="com.equestrianism.api.model.po.DictionaryDetailEntity">
        INSERT INTO
            dictionary_detail (
                item_code,
                item_value,
                dictionary_id,
                status,
                delete_flag,
                data_version,
                create_date
            ) VALUES (
                #{itemCode, jdbcType=VARCHAR},
                #{itemValue, jdbcType=VARCHAR},
                #{dictionaryId, jdbcType=INTEGER},
                1,
                0,
                1,
                now()
            )
    </insert>

    <update id="updateBySelective" parameterType="com.equestrianism.api.model.po.DictionaryDetailEntity">
        UPDATE
            dictionary_detail
        <set>
            <if test="itemCode != null and itemCode != ''">
                item_code = #{itemCode, jdbcType=VARCHAR},
            </if>
            <if test="itemValue != null and itemValue != ''">
                item_value = #{itemValue, jdbcType=VARCHAR},
            </if>
            <if test="dictionaryId != null">
                dictionary_id = #{dictionaryId, jdbcType=INTEGER},
            </if>
            <if test="status != null">
                status = #{status, jdbcType=INTEGER},
            </if>
            <if test="deleteFlag != null">
                delete_flag = #{deleteFlag, jdbcType=INTEGER}
            </if>
        </set>
        WHERE
            dictionary_detail_id = #{dictionaryDetailId, jdbcType=INTEGER}
    </update>

</mapper>
