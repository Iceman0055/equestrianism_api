<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- user_info表 -->
<mapper namespace="com.equestrianism.api.dao.AssetTypeDetailMapper">

    <!--返回Map-->
    <resultMap id="BaseResultMap" type="com.equestrianism.api.model.po.AssetTypeDetailEntity">
        <id column="type_detail_id" property="typeDetailId" jdbcType="INTEGER"/>
        <result column="type_detail_name" property="typeDetailName" jdbcType="VARCHAR"/>
        <result column="type_id" property="typeId" jdbcType="INTEGER"/>
        <result column="remark" property="remark" jdbcType="INTEGER"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
        <result column="delete_flag" property="deleteFlag" jdbcType="INTEGER"/>
        <result column="data_version" property="dataVersion" jdbcType="INTEGER"/>
        <result column="create_date" property="createDate" jdbcType="TIMESTAMP"/>
        <result column="update_date" property="updateDate" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--基本的sql查询字段 公共引用...-->
    <sql id="Base_Column_List">
        type_detail_id, type_detail_name, type_id, remark, status, delete_flag, data_version,
        create_date, update_date
    </sql>


    <insert id="insert" parameterType="com.equestrianism.api.model.po.AssetTypeDetailEntity">
        INSERT INTO
            asset_type_detail (
                type_detail_name,
                type_id,
                remark,
                status,
                delete_flag,
                data_version,
                create_date
            ) VALUES (
                #{typeDetailName, jdbcType=VARCHAR},
                #{typeId, jdbcType=INTEGER},
                #{remark, jdbcType=VARCHAR},
                1,
                0,
                1,
                now()
            )
    </insert>

    <update id="updateBySelective" parameterType="com.equestrianism.api.model.po.AssetTypeDetailEntity">
        UPDATE
            asset_type_detail
        <set>
            <if test="typeDetailName != null and typeDetailName != ''">
                type_detail_name = #{typeDetailName, jdbcType=VARCHAR},
            </if>
            <if test="remark != null and remark != ''">
                remark = #{remark, jdbcType=VARCHAR},
            </if>
            <if test="status != null">
                status = #{status, jdbcType=INTEGER},
            </if>
            <if test="deleteFlag != null">
                delete_flag = #{deleteFlag, jdbcType=INTEGER}
            </if>
        </set>
        WHERE
            type_detail_id = #{typeDetailId, jdbcType=INTEGER}
    </update>
    
    <select id="selectAssetTypeDetailListByPage" parameterType="com.equestrianism.api.model.vo.asset_type_detail.AssetTypeDetailListVO"
            resultType="com.equestrianism.api.model.model.AssetTypeDetailListModel">
        SELECT
            type_detail_id    typeDetailId,
            type_detail_name  typeDetailName,
            type_id           typeId,
            remark            remark
        FROM
            asset_type_detail
        WHERE
            delete_flag = 0
        AND
            type_id = #{typeId, jdbcType=INTEGER}
        LIMIT
            #{beginIndex}, #{pageRecorders}
    </select>

    <select id="countAssetTypeDetailListByPage" parameterType="com.equestrianism.api.model.vo.asset_type_detail.AssetTypeDetailListVO"
            resultType="java.lang.Integer">
        SELECT
            count(1)
        FROM
            asset_type_detail
        WHERE
            delete_flag = 0
        AND
            type_id = #{typeId, jdbcType=INTEGER}
    </select>

    <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT
            <include refid="Base_Column_List"/>
        FROM
            asset_type_detail
        WHERE
            type_detail_id = #{typeDetailId, jdbcType=INTEGER}
    </select>

    <select id="selectByComboBox" parameterType="java.lang.Integer"
            resultType="com.equestrianism.api.model.model.AssetTypeDetailComboBoxModel">
        SELECT
            type_detail_id    typeDetailId,
            type_detail_name  typeDetailName
        FROM
            asset_type_detail
        WHERE
            type_id = #{typeId, jdbcType=INTEGER}
    </select>

</mapper>
