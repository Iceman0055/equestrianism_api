<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- user_info表 -->
<mapper namespace="com.equestrianism.api.dao.TreatmentAssetInfoMapper">

    <!--返回Map-->
    <resultMap id="BaseResultMap" type="com.equestrianism.api.model.po.TreatmentAssetInfoEntity">
        <id column="treatment_asset_id" property="treatmentAssetId" jdbcType="VARCHAR"/>
        <result column="treatment_id" property="treatmentId" jdbcType="VARCHAR"/>
        <result column="asset_type" property="assetType" jdbcType="INTEGER"/>
        <result column="asset_id" property="assetId" jdbcType="VARCHAR"/>
        <result column="count" property="count" jdbcType="INTEGER"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
        <result column="delete_flag" property="deleteFlag" jdbcType="INTEGER"/>
        <result column="data_version" property="dataVersion" jdbcType="INTEGER"/>
        <result column="create_date" property="createDate" jdbcType="TIMESTAMP"/>
        <result column="update_date" property="updateDate" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--基本的sql查询字段 公共引用...-->
    <sql id="Base_Column_List">
        treatment_asset_id, treatment_id, asset_type, asset_id, count, status, delete_flag, data_version, create_date,
        update_date
    </sql>


    <insert id="insert" parameterType="com.equestrianism.api.model.po.AssetInfoEntity">
        INSERT INTO
            treatment_asset_info (
                treatment_asset_id,
                treatment_id,
                asset_type,
                asset_id,
                count,
                status,
                delete_flag,
                data_version,
                create_date
            ) VALUES (
                #{treatmentAssetId, jdbcType=VARCHAR},
                #{treatmentId, jdbcType=VARCHAR},
                #{assetType, jdbcType=INTEGER},
                #{assetId, jdbcType=VARCHAR},
                #{count, jdbcType=INTEGER},
                1,
                0,
                1,
                now()
            )
    </insert>

    <update id="updateBySelective" parameterType="com.equestrianism.api.model.po.TreatmentAssetInfoEntity">
        UPDATE
            treatment_asset_info
        <set>
            <if test="status != null">
                status = #{status, jdbcType=INTEGER},
            </if>
            <if test="deleteFlag != null">
                delete_flag = #{deleteFlag, jdbcType=INTEGER}
            </if>
        </set>
        WHERE
            treatment_asset_id = #{treatmentAssetId, jdbcType=VARCHAR}
    </update>

    <select id="selectByTreatmentId" parameterType="java.util.Map"
            resultType="com.equestrianism.api.model.model.TreatmentInfoAddAssetModel">
          SELECT
              a.asset_id        assetId,
              b.asset_name      assetName,
              a.count           count
          FROM
              treatment_asset_info a,
              asset_info b
          WHERE
              a.asset_id = b.asset_id
          AND
              a.treatment_id = #{treatmentId, jdbcType=VARCHAR}
          AND
              a.asset_type = #{assetType, jdbcType=INTEGER}
    </select>

</mapper>
